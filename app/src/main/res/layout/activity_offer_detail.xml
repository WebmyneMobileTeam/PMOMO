<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    tools:context="com.example.dhruvil.parkmomo.ui.OfferDetailActivity">


    <LinearLayout
        android:id="@+id/clockView"

        android:padding="8dp"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtHour"
                android:textSize="52sp"
                android:textColor="#aaffffff"
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView

                    android:textSize="12sp"
                    android:textColor="#aaffffff"
                    android:text="hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="52sp"
                android:textColor="#aaffffff"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMinute"
                    android:textSize="52sp"
                    android:textColor="#aaffffff"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:textSize="12sp"
                    android:textColor="#aaffffff"
                    android:text="minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="52sp"
                android:textColor="#aaffffff"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSecond"
                    android:textSize="52sp"
                    android:textColor="#aaffffff"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:textSize="12sp"
                    android:textColor="#aaffffff"
                    android:text="seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_below="@+id/clockView"
        android:layout_centerInParent="true"
        android:id="@+id/detailLayout"
        android:paddingBottom="8dp"

        android:paddingLeft="8dp"
        android:paddingRight="8sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:paddingBottom="16dp"
            android:id="@+id/detailView"

            android:background="@drawable/rounded_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/title"

            android:gravity="center"

            android:text="Title"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_below="@+id/title"
            android:text="( address )"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_above="@+id/verify"
            android:layout_below="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="8dp"
                android:id="@+id/description"
                android:gravity="left"
                android:text="description"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView

            android:id="@+id/verify"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textColor="#fff"
            android:text="VERIFY QR CODE"
            android:background="@drawable/background_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <com.example.dhruvil.parkmomo.custom_components.CircularImageView
            android:id="@+id/categoryImage"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:border_color="#ddd"
            app:border_width="4dp"
            app:shadow="false"
            android:scaleType="centerCrop"
            android:src="@drawable/another"/>
    </RelativeLayout>

</RelativeLayout>
